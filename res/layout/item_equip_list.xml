<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="80dp" >

    <com.kituri.app.widget.XRelativeLayout
        android:id="@+id/iv_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_dialog_and_other" />

    <ImageView
        android:id="@+id/iv_equip"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/iv_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_equip_00" />

    <ImageView
        android:id="@+id/iv_equip_type"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/iv_icon"
        android:layout_alignLeft="@+id/iv_icon"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:src="@drawable/icon_equip_type_01" />

    <TextView
        android:id="@+id/tv_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_size_small_sml"
        android:gravity="center"
        android:text="改装火药"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_icon" />

</RelativeLayout>