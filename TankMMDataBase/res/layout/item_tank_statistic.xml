<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp" 
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    >

    <ImageView
        android:id="@+id/iv_statistic"
        android:layout_marginLeft="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/icon_tank_statistics_fire" />

    <TextView
        android:id="@+id/tv_statistic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_statistic"
        android:layout_alignTop="@+id/iv_statistic"
        android:layout_toRightOf="@+id/iv_statistic"
        android:layout_marginLeft="4dp"
        style="@style/style_tv_statistic"
        />
    
</RelativeLayout>