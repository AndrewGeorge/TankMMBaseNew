<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_dialog_and_other"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="10dp" >

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_tech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            
                    <com.kituri.app.widget.XImageView
            android:id="@+id/btn_tech_left_arrow"
            android:layout_width="19dp"
            android:layout_height="64dp"
            android:layout_alignLeft="@+id/vp_tech"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_tech_left_arrow"
            />

        <com.kituri.app.widget.XImageView
            android:id="@+id/btn_tech_right_arrow"
            android:layout_width="19dp"
            android:layout_height="64dp"
            android:layout_alignRight="@+id/vp_tech"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_tech_right_arrow" />
            
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_tank_detai_title_info"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_class"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/td_highlight_text_direction"
                android:textSize="@dimen/tv_size_medium_med"
                android:textStyle="bold" />

            <com.kituri.app.widget.XImageView
                android:id="@+id/iv_rank_lv_01"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_tech_rank_bk"
                android:src="@drawable/icon_rank_lv_01" />

            <com.kituri.app.widget.XImageView
                android:id="@+id/iv_rank_lv_02"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_tech_rank_bk"
                android:src="@drawable/icon_rank_lv_02" />

            <com.kituri.app.widget.XImageView
                android:id="@+id/iv_rank_lv_03"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_tech_rank_bk"
                android:src="@drawable/icon_rank_lv_03" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>